@model Workshop5.Rev2.App.Models.RegistrationViewModel
@{
    ViewData["Title"] = "Create";
}
<br />
<center>
    <h1>Customer Registration:</h1>
    <br />
    <b>@ViewBag.message</b>
    <br />
</center>
<div class="row justify-content-center">
    <div class="form-group col-md-4 col-md-offset-5 align-center ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustFirstName" class="control-label">Enter First Name:</label>
                <input asp-for="CustFirstName" class="form-control" action="CustFirstName" />
                <span asp-validation-for="CustFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustLastName" class="control-label">Enter Last Name:</label>
                <input asp-for="CustLastName" class="form-control" />
                <span asp-validation-for="CustLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustAddress" class="control-label">Enter Street Address:</label>
                <input asp-for="CustAddress" class="form-control" />
                <span asp-validation-for="CustAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustCity" class="control-label">Enter City:</label>
                <input asp-for="CustCity" class="form-control" />
                <span asp-validation-for="CustCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustProv" class="control-label">Enter Province:</label>
                <input asp-for="CustProv" class="form-control" />
                <span asp-validation-for="CustProv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustPostal" class="control-label">Enter Postal Code, (without - ):</label>
                <input asp-for="CustPostal" placeholder="A1A1A1" class="form-control" />
                <span asp-validation-for="CustPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustHomePhone" class="control-label">Enter Home Phone:</label>
                <input asp-for="CustHomePhone" placeholder="###-###-####" class="form-control" />
                <span asp-validation-for="CustHomePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustBusPhone" class="control-label">Enter Business Phone:</label>
                <input asp-for="CustBusPhone" placeholder="###-###-####" class="form-control" />
                <span asp-validation-for="CustBusPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustEmail" class="control-label">Enter Email Address:</label>
                <input asp-for="CustEmail" class="form-control" />
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustUserName" class="control-label">Create a User Name:</label>
                <input asp-for="CustUserName" class="form-control" />
                <span asp-validation-for="CustUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustPassword" class="control-label">Create a Password:</label>
                <input asp-for="CustPassword" class="form-control" type="password" />
                <span asp-validation-for="CustPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
                <a href="~/home/index" class="text-center btn btn-warning justify-content-center">Return to Home</a>
            </div>
        </form>
        <br />

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
